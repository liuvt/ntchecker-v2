@page "/dashboard"
@rendermode InteractiveServer
@attribute [Authorize]

<h3 class="mb-4 text-2xl font-bold text-gray-800">Dashboard Overview</h3>

<div class="grid grid-cols-1 gap-4 md:grid-cols-3">
    <div class="rounded bg-white p-4 shadow">
        <div class="text-gray-500">Total Users</div>
        <div class="text-2xl font-bold">1,200</div>
    </div>
    <div class="rounded bg-white p-4 shadow">
        <div class="text-gray-500">Revenue</div>
        <div class="text-2xl font-bold">$25,000</div>
    </div>
    <div class="rounded bg-white p-4 shadow">
        <div class="text-gray-500">Active Sessions</div>
        <div class="text-2xl font-bold">89</div>
    </div>
</div>

