<header class="flex items-center justify-between bg-white border-b px-4 py-2 shadow-sm">
    <!-- Hamburger for mobile -->
    <button class="md:hidden p-2 rounded hover:bg-gray-100" @onclick="OnMenuClick">
        <!-- Hamburger icon (SVG) -->
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24"
             xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>

    <div class="text-lg font-semibold">Dashboard</div>

    <div class="flex items-center space-x-4">
        <span class="text-gray-700 hidden sm:inline">Hello, Admin</span>
        <button class="p-2 rounded-full hover:bg-gray-100">🔒</button>
    </div>
</header>

@code {
    [Parameter]
    public EventCallback OnMenuClick { get; set; }
}
